{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  },
  "exclude": ["node_modules", "public", ".cache", "__mocks__", "__tests__"]
}
